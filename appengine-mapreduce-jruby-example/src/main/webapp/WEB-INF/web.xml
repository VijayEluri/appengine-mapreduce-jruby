<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <servlet>
        <servlet-name>mapreduce</servlet-name>
        <servlet-class>
            com.google.appengine.tools.mapreduce.MapReduceServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>
            com.google.appengine.demos.mapreduce.TestServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>
            com.google.appengine.demos.mapreduce.InitServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mapreduce</servlet-name>
        <url-pattern>/mapreduce/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>init</servlet-name>
        <url-pattern>/init/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>remoteapi</servlet-name>
        <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>remoteapi</servlet-name>
        <url-pattern>/remote_api/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>com.ikai.mapperdemo.servlets.UploadBlobServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SuccessfulUpload</servlet-name>
        <servlet-class>com.ikai.mapperdemo.servlets.SuccessfulUploadServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>Serve</servlet-name>
        <servlet-class>com.ikai.mapperdemo.servlets.ServeBlobServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Serve</servlet-name>
        <url-pattern>/serve</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SuccessfulUpload</servlet-name>
        <url-pattern>/upload-success</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>


    <!-- We put an admin constraint on everything, since MapReduce can use a
significant amount of resources. In practice, you'll probably want
to restrict just /mapreduce/* -->
    <!--
        <security-constraint>
            <web-resource-collection>
                <url-pattern>/*</url-pattern>
            </web-resource-collection>
            <auth-constraint>
                <role-name>admin</role-name>
            </auth-constraint>
        </security-constraint>
    -->

    <filter>
        <filter-name>org.jruby.rack.RackFilter</filter-name>
        <filter-class>org.jruby.rack.RackFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>org.jruby.rack.RackFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.google.appengine.jruby.LazyContextListener</listener-class>
    </listener>
</web-app>
